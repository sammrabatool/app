<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".otp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="239dp"
            android:background="@drawable/erpp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/opt_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Please enter the verification code sent to your email"
                android:textAllCaps="false"
                android:textColor="#6b7685"

                android:textSize="17dp" />
            <!--   android:drawableStart="@drawable/user"
              android:background="@drawable/rectangle_3"-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:weightSum="5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/optCode1"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="20dp"
                android:textAllCaps="false"
                android:textColor="#6b7685"
                android:textSize="20dp"

                android:theme="@style/opt_editText" />
            <!--    android:drawableStart="@drawable/lock"
            android:background="@drawable/rectangle_3"-->
            <EditText
                android:id="@+id/optCode2"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:backgroundTint="#6b7685"
                android:cursorVisible="true"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="20dp"
                android:textAllCaps="false"
                android:textColor="#6b7685"
                android:textSize="20dp"
                android:layout_weight="1"
                android:theme="@style/opt_editText" />

            <EditText
                android:id="@+id/optCode3"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="20dp"
                android:textAllCaps="false"
                android:textColor="#6b7685"
                android:textSize="20dp"
                android:theme="@style/opt_editText" />

            <EditText
                android:id="@+id/optCode4"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="20dp"
                android:textAllCaps="false"
                android:textColor="#6b7685"
                android:textSize="20dp"
                android:theme="@style/opt_editText" />

            <EditText
                android:id="@+id/optCode5"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint=""
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="20dp"
                android:textAllCaps="false"
                android:textColor="#6b7685"
                android:textSize="20dp"
                android:theme="@style/opt_editText" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle_10"
                android:clickable="true"
                android:onClick="MoveToLoginActivity"
                android:padding="16dp"
                android:text="Validate"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</LinearLayout>